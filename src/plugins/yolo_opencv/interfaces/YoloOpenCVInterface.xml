<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE interface SYSTEM "interface.dtd">
<interface name="YoloOpenCVInterface" author="Niklas Sebastian Eltester" year="2020">
  <constants>
  </constants>
  <data>
    <comment>
      Interface to run Image detection based on the Yolo implementation in OpenCV
    </comment>
    <field type="uint32" name="msgid">
      Last processed Message
    </field>
  </data>
  <message name="DetectObjectMessage">
    <comment>
      Detect an object based on existing weights
    </comment>
    <field type="string" length="1024" name="path_to_picture">
        Path to the picture to run the detection on
    </field>
    <field type="string" length="1024" name="video_device">
	Which video device to use
    </field>
  </message>
  <message name="DetectedMessage">
    <comment>
      Values of the detected object
    </comment>
    <field type="bool" name="detection_successful">
        Whether anything was detected
    </field>
    <field type="string" length="128" name="error_message">
	Cause of failure
    </field>
    <field type="int64" name="classId">
	Class Identifier of object
    </field>
    <field type="float" name="confidence">
	Confidence of detection
    </field>
    <field type="int64" name="centerX">
	X-Axis center of bounding box
    </field>
    <field type="int64" name="centerY">
	Y-Axis center of bounding box
    </field>
    <field type="int64" name="width">
	Width of bounding box
    </field>
    <field type="int64" name="height">
	Height of bounding box
    </field>
  </message>
</interface>
