	(defop debug-workpiece
		:invocation (workpiece $id $base $rings $cap $place)
		:body ((! (printf (Format "WorkPiece: ID %s  %s %s %s %s \n" $id $base $rings $cap $place))))
	  )


	(defop debug-achieveworkpiece
		:invocation (Achieve-WorkPiece $agent (workpiece $id (base $base) $rings (cap $cap) (place $p-name $p-feature)) $status)
		:body ((! (printf (Format "ACHIEVE-WORPIECE: %s %s %s %s %s %s (P:%s %s) \n" $agent $status $id $base $rings $cap $p-name $p-feature))))
	  )


	(defop debug-Agent-Achieving
		:invocation (agent-achieving $agent $task)
		:body ((! (printf (Format "AGENT-ACHIEVING: %s %s \n" $agent $task))))
	  )

	(defop debug-Goal-Inmind
		:invocation ( goal-inmind $workpiece )
		:body ((! (printf (Format "Goal-Inmind: %s \n" $workpiece))))
	  )

	)
