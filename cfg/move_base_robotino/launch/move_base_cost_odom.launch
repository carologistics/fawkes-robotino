<launch>
  <param name="robot_description" command="cat $(find move_base_robotino)/cfg_2/robotino.urdf" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find move_base_robotino)/cfg_2/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find move_base_robotino)/cfg_2/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find move_base_robotino)/cfg_2/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find move_base_robotino)/cfg_2/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find move_base_robotino)/cfg_2/base_local_planner_params.yaml" command="load" />

    <param name="recovery_behavior_enabled" value="true" type="bool" />
    <param name="conservative_reset_dist" value="5.6" type="double" />
  </node>
</launch>
